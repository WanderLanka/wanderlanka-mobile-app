{
  "expo": {
    "name": "wanderlanka-mobile-app",
    "slug": "wanderlanka-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wander_logo.png",
    "scheme": "wanderlankawebapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyClCL8iZ9n7AtjF3J3nVSCaQcoCJ5SaKtw"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access for navigation.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access for navigation.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to let you choose a cover image for your package.",
        "NSPhotoLibraryAddUsageDescription": "We need permission to save images if required."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBV-XxyXh8Az3HpKr884W8rNjJ93m2qGmc"
        }
      },
      "permissions": [
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app uses location to show nearby places and help with navigation."
        }
      ],
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
