{
  "expo": {
    "name": "wanderlanka-mobile-app",
    "slug": "wanderlanka-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wander_logo.png",
    "scheme": "wanderlankawebapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyBPAjLGZlFyzwIRo60j3HlhR7Qp0pmqQQ8"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access for navigation.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access for navigation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBPAjLGZlFyzwIRo60j3HlhR7Qp0pmqQQ8"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app uses location to show nearby places and help with navigation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
